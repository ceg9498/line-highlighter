{
	"manifest_version": 2,
	"name": "Line Highlighter",
	"description": "Highlight lines of text by hovering over them to improve focus.",
	"version": "0.1.0",
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "options/options.html",
		"default_icon": {
			"16": "images/16.png",
			"48": "images/48.png",
			"128": "images/128.png"
		}
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "options/options.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [ "js/highlight.js" ]
		}
	]
}